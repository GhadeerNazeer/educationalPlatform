@model IEnumerable<educationalpp.Models.course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary"  asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_date)
            </th>
                <th>
                teacher
            </th>
            <th>
               department 
            </th>
           
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date)
            </td> 
              <td>
                @Html.DisplayFor(modelItem => item.teacher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department.name)
            </td> 
                <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
            
        </tr>
}
    </tbody>
</table>
